{
  "name": "firebase-client",
  "version": "1.0.0",
  "description": "A client for working with Firebase",
  "main": "dist/main/index.js",
  "scripts": {
    "build-electron-renderer-prod": "webpack --config webpack.renderer.prod.js",
    "build-electron-main-prod": "webpack --config webpack.main.prod.js",
    "build-electron-main-dev": "webpack --config webpack.main.dev.js",
    "start-local-server": "webpack-dev-server --config webpack.renderer.dev.js",
    "start-electron": "electron dist/main/index.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "babel": "^6.23.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-vue-jsx": "^3.7.0",
    "babel-preset-typescript-vue": "^1.0.2",
    "copy-webpack-plugin": "^5.0.2",
    "css-loader": "^2.1.1",
    "electron": "^15.5.5",
    "electron-builder": "^21.2.0",
    "electron-rebuild": "^1.8.6",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.3.1",
    "terser-webpack-plugin": "^1.4.1",
    "vue-loader": "^15.7.1",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.8.0",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@google-cloud/firestore": "^1.3.0",
    "date-fns": "^1.30.1",
    "dotenv": "^7.0.0",
    "dotenv-webpack": "^1.7.0",
    "electron-settings": "^3.2.0",
    "firebase": "^7.13.1",
    "firebase-admin": "^8.10.0",
    "json-formatter-js": "^2.2.1",
    "milligram": "^1.3.0",
    "objects-to-csv": "^1.3.6",
    "sanitize.css": "^8.0.1",
    "spawn-rx": "^3.0.0",
    "v-jsoneditor": "^1.2.2",
    "vue": "^2.6.10"
  },
  "build": {
    "productName": "FireClient",
    "appId": "trueframe.fireclient",
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "win": {
      "target": [
        "portable"
      ]
    },
    "portable": {
      "artifactName": "fireclient_portable.exe"
    },
    "files": [
      "dist/renderer/**/*",
      "dist/main/index.js"
    ],
    "directories": {
      "output": "dist/electron"
    }
  }
}
