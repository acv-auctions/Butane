{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "./dist/main",
    "rootDir": "src",
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "esnext",
    "types": [],
    "removeComments": true,
    "preserveConstEnums": true,
    "paths": {
      "css/*": ["src/renderer/css/*"],
      "component/*": ["src/renderer/component/*"],
      "img/*": ["src/renderer/img/*"],
      "util/*": ["src/renderer/util/*"]
    },
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
